<h2>Create a new drone</h2>

<section>
  
  <form method="POST" action="/drones">
    <label>
      Name:
      <input name="name" type="text" />
    </label>
    <label>
      Propellers:
      <input name="propellers" type="number" min="1" />
    </label>
    <label>
      Max Speed:
      <input name="maxSpeed" type="number" />
    </label>
    <button type="submit">
      Create
    </button>
  </form>
</section>